<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorDarkBG"
    android:fillViewport="true">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorDarkBG"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="0dp">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp">

            <TextView
                android:id="@+id/text_book_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:maxLines="1"
                android:paddingRight="20dp"
                android:textColor="@color/colorSemiWhite"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="391dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"/>

        <TextView
            android:id="@+id/text_book_content"
            android:layout_width="381dp"
            android:layout_height="431dp"
            android:gravity="left"
            android:maxLines="22"
            android:paddingRight="20dp"
            android:textColor="@color/colorSemiWhite"
            android:textSize="16dp"
            android:inputType="textMultiLine"/>

        <Button
            android:id="@+id/edit_book_button"
            android:layout_width="256dp"
            android:layout_height="55dp"
            android:layout_below="@+id/text_view_authors"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="100dp"
            android:text="@string/edit_user"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="15dp" />

    </TableLayout>
</ScrollView>