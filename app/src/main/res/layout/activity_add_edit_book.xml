<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorDarkBG"
        android:paddingTop="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/text_view_book_content"
            android:layout_width="381dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_book_title"
            android:layout_marginTop="70dp"
            android:paddingTop="10dp"
            android:text="Content"
            android:textAlignment="center"
            android:textColor="@color/colorSemiWhite"
            android:textSize="16dp" />

        <EditText
            android:layout_marginTop="16dp"
            android:layout_below="@+id/basic_title_text_view"
            android:textColor="@color/colorSemiWhite"
            android:id="@+id/edit_text_book_title"
            android:backgroundTint="@color/colorSemiWhite"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/text_view_book_title"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:layout_marginRight="10dp" />

        <EditText
            android:id="@+id/edit_text_content"
            android:layout_width="394dp"
            android:layout_height="438dp"
            android:inputType="textMultiLine"
            android:layout_below="@+id/basic_title_text_view"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="-101dp"
            android:layout_marginTop="112dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="14dp"
            android:layout_toRightOf="@+id/text_view_book_title"
            android:backgroundTint="@color/colorSemiWhite"
            android:gravity="top"
            android:textColor="@color/colorSemiWhite"
            android:textCursorDrawable="@drawable/custom_cursor" />

        <Button
            android:id="@+id/complete_registration_button"
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:layout_below="@+id/text_view_authors"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="600dp"
            android:layout_marginEnd="100dp"
            android:text="@string/complete_registration"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="15dp" />

    </RelativeLayout>
</ScrollView>